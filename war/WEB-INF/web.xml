<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="TheModernWayAPI" version="3.1">
  <display-name>themodernway-api</display-name>
  <context-param>
    <param-name>log4jExposeWebAppRoot</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:/com/themodernway/api/config/log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:/com/themodernway/api/config/ApplicationContext.xml
			classpath:/com/ait/tooling/server/sql/config/SQLApplicationContext.xml
			classpath:/com/ait/tooling/server/mongodb/config/MongoDBApplicationContext.xml
			classpath:/com/ait/tooling/server/rest/config/RESTApplicationContext.xml
			classpath:/com/ait/tooling/server/core/config/CoreApplicationContext.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.ait.tooling.server.core.support.spring.CoreWebContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>CacheControlFilter</filter-name>
    <filter-class>com.ait.tooling.server.core.servlet.filter.CacheControlFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>RESTServlet</servlet-name>
    <servlet-class>com.ait.tooling.server.rest.servlet.RESTServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RESTCommandServlet</servlet-name>
    <servlet-class>com.ait.tooling.server.rest.servlet.RESTCommandServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RESTServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RESTCommandServlet</servlet-name>
    <url-pattern>/Services.rpc</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <absolute-ordering/>
</web-app>
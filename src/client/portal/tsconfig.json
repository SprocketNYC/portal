{
  "include": ["app"],
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "sample-module": ["app/sample-module"],
      "styles": ["styles"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
